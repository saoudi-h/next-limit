{
    "name": "next-limit",
    "version": "1.2.0",
    "description": "A simple and reusable Rate Limiter for Node.js applications, built with Redis.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "format": "prettier .",
        "format:fix": "prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "clean": "rm -rf node_modules dist coverage docs",
        "prepare": "pnpm build && pnpm husky",
        "prepublishOnly": "pnpm run test && pnpm run lint:fix",
        "release": "semantic-release",
        "build:lua": "tsx scripts/lua-minifier.ts",
        "build:package": "tsup --config tsup.config.ts",
        "build": "pnpm run build:lua && pnpm run build:package",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "docker:up": "docker-compose --env-file .env.test -f docker-compose.test.yml up -d --wait",
        "docker:down": "docker-compose --env-file .env.test -f docker-compose.test.yml down",
        "test": "vitest --exclude \"**/*.integration.test.ts\"",
        "test:ui": "vitest --exclude \"**/*.integration.test.ts\" --ui",
        "test:coverage": "vitest run --coverage",
        "test:coverage:dev": "pnpm run docker:up && vitest run --coverage && pnpm run docker:down",
        "test:integration": "pnpm run docker:up && vitest run --include \"**/*.integration.test.ts\" && pnpm run docker:down",
        "typecheck": "tsc --noEmit",
        "doc": "typedoc"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "keywords": [
        "ratelimit",
        "redis",
        "nextjs",
        "express",
        "fastify",
        "rate-limiter",
        "nestjs",
        "middleware",
        "security",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/saoudi-h/next-limit.git"
    },
    "author": {
        "name": "Saoudi Hakim",
        "url": "https://hakimsaoudi.dev",
        "email": "saoudihakim@gmail.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/saoudi-h/next-limit/issues"
    },
    "homepage": "https://github.com/saoudi-h/next-limit#readme",
    "engines": {
        "node": ">=16.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^13.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.3",
        "@semantic-release/npm": "^12.0.2",
        "@semantic-release/release-notes-generator": "^14.0.3",
        "@types/express": "^5.0.3",
        "@types/ms": "^2.1.0",
        "@types/node": "^24.1.0",
        "@vitest/coverage-v8": "3.2.4",
        "@vitest/ui": "3.2.4",
        "conventional-changelog-conventionalcommits": "^9.1.0",
        "dotenv": "^17.2.1",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "fastify": "^5.4.0",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "luamin": "^1.0.4",
        "prettier": "^3.6.2",
        "redis": "^5.6.1",
        "semantic-release": "^24.2.7",
        "tsup": "^8.0.2",
        "tsx": "^4.20.3",
        "typedoc": "^0.28.7",
        "typedoc-plugin-markdown": "^4.7.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.38.0",
        "vitest": "^3.2.4"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "prettier --write --ignore-unknown",
            "eslint --fix"
        ]
    },
    "packageManager": "pnpm@10.13.1",
    "dependencies": {
        "ms": "^2.1.3"
    }
}
