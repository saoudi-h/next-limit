{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "types": ["vitest/globals"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src", "__test__"],
    "exclude": ["node_modules", "dist"]
}
